
<!DOCTYPE html>
<html>
<head>

<body>
<h1 align="center">Max three boxes are selected</h1>
<form>
 <input type="checkbox" id="myCheck1">SUNDAY<br>
 <input type="checkbox" id="myCheck2">MONDAY<br>
 <input type="checkbox" id="myCheck3">TUESDAY<br>
 <input type="checkbox" onclick="myfunction()" id="myCheck4">WEDNESDAY<br>
 <input type="checkbox" onclick="myfunction()" id="myCheck5">THURSDAY<br>
 <input type="checkbox" onclick="myfunction()" id="myCheck6">FRIDAY<br>
 <input type="checkbox" onclick="myfunction()" id="myCheck7">SATURDAY<br><br>
 </form>
<button onclick="checked()">check  </button>
<button onclick="unchecked()">none </button>
 
<script>
function checked()
{
	document.getElementById("myCheck1").checked=true;
		document.getElementById("myCheck2").checked=true;

	document.getElementById("myCheck3").checked=true;

}
function unchecked()
{
	
		document.getElementById("myCheck2").checked=false;
	document.getElementById("myCheck3").checked=false;
		document.getElementById("myCheck4").checked=false;

	document.getElementById("myCheck5").checked=false;
		document.getElementById("myCheck6").checked=false;

	document.getElementById("myCheck7").checked=false;
}
 function myfunction()
{
	alert("max three boxes are selected");
}
</script>

</ body>

</head>
</html>
